@model List<Company.DomainModels.Inventory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<h2>Inventory</h2>

<a href="/admin/inventories/create">Create</a>
<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Availability Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(temp => item.ProductID)</td>
            <td>@Html.DisplayFor(temp => item.ProductName)</td>
            <td>@Html.DisplayFor(temp => item.Price)</td>
            <td>@Html.DisplayFor(temp => item.AvailabilityStatus)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ProductID, controller = "Inventories", area = "Admin" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID, controller = "Inventories", area = "Admin" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID, controller = "Inventories", area = "Admin" })
            </td>
        </tr>
    }
</table>

