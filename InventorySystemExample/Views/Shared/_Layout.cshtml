<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/c5bd718d8d.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .navbar-brand{
            padding-left:20px;
        }
        .field-validation-error, .validation-summary-errors {
            color: red;
        }

        div{
            display:inline-block;
        }
        .btn btn-success{
            margin-top:20px;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">Company</a>
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/home/index">Home</a></li>
            @if (User.Identity.IsAuthenticated == false)
            {
                <li class="nav-item"><a class="nav-link" href="/account/register">Register</a></li>
                <li class="nav-item"><a class="nav-link" href="/account/login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/Inventories/index">Inventory</a></li>
            }
            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item"><a class="nav-link" href="/Inventories/index">Inventory</a></li>
                <li class="nav-item"><a class="nav-link" href="/account/myprofile">My Profile</a></li>
                <li class="nav-item"><a class="nav-link" href="/account/logout">Logout</a></li>
            }
        </ul>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-white">
                Welcome, @User.Identity.Name
            </div>
        }

    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>