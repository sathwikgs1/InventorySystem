@model List<Company.DomainModels.Inventory>
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventory</h2>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Availability Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(temp => item.ProductID)</td>
            <td>@Html.DisplayFor(temp => item.ProductName)</td>
            <td>@Html.DisplayFor(temp => item.Price)</td>
            <td>@Html.DisplayFor(temp => item.AvailabilityStatus)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ProductID, controller = "Inventories" }) |
            </td>
        </tr>
    }
</table>