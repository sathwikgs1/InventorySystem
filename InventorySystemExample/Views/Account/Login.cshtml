@model InventorySystemExample.ViewModels.LoginViewModels
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
<div class="form-row mx-auto" style="width:300px">
    <div class="form-group col-md-12">
        @Html.LabelFor(temp => temp.EmployeeId)
        @Html.TextBoxFor(temp => temp.EmployeeId, new { placeholder = "EmployeeId", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.EmployeeId)
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(temp => temp.Password)
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>

    @Html.ValidationSummary()

    <button type="submit" class="btn btn-success">Login</button>
</div>
}